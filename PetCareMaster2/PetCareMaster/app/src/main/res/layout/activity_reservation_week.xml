<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReservationWeek"
    android:background="@drawable/crocking">
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
        <LinearLayout
            android:paddingTop="30dp"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <Button
                    android:id="@+id/ResWeekAddB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="요일"/>
                <TextView
                    android:text="X요일"
                    android:id="@+id/CheckWeekByText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/ResWeekTimeAddB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="시간"/>
                <TextView
                    android:text="시간"
                    android:id="@+id/CheckTimeByText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:paddingTop="20dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/BT1B"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1번통"/>
            <Button
                android:id="@+id/BT2B"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2번통"/>
            <Button
                android:id="@+id/BT3B"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3번통"/>
        </LinearLayout>
        <LinearLayout
            android:paddingTop="20dp"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1번 통 배식량: "/>
                <TextView
                    android:text="버튼을 눌러 입력하세요"
                    android:id="@+id/BT1_check_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:paddingTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2번 통 배식량: "/>
                <TextView
                    android:text="버튼을 눌러 입력하세요"
                    android:id="@+id/BT2_check_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:paddingTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3번 통 배식량: "/>
                <TextView
                    android:text="버튼을 눌러 입력하세요"
                    android:id="@+id/BT3_check_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
        </LinearLayout>

    <LinearLayout
        android:paddingTop="50dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/WeekAddB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="추가"/>
        <Button
            android:id="@+id/WeekCancleB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="취소"/>
    </LinearLayout>
</LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>